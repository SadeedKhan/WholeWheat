@model List<WholeWheatRepository.Models.ManageExpense>

<div class="row" style="margin-top:100px;">
    <table id="Table" class="table table-striped table-bordered dataTable no-footer" style="width:100%;">
        <thead>
            <tr>
                <th>Expense Name</th>
                <th>Date</th>
                <th>Reference</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currentexpense in Model)
            {
                <tr>
                    <td>@currentexpense.ExpenseName</td>
                    <td>@currentexpense.ExpenseDate</td>
                    <td>@currentexpense.ReferenceNo</td>
                    <td>@currentexpense.ExpenseAmount</td>
                    <td>@currentexpense.ExpenseHeadName</td>
                    <td>@currentexpense.Status</td>
                    <td>
                        <div class="btn-group">
                            <span data-expenseid="@currentexpense.ExpenseID" data-expensenameid="@currentexpense.ExpenseNameID" data-expensename="@currentexpense.ExpenseName" data-expensedate="@currentexpense.ExpenseDate" data-referenceno="@currentexpense.ReferenceNo" data-expenseheadid="@currentexpense.ExpenseHeadID" data-image="@currentexpense.FileName" data-amount="@currentexpense.ExpenseAmount" data-notes="@currentexpense.Notes" data-statusid="@currentexpense.StatusID" data-status="@currentexpense.Status" data-target="#AddExpense" data-toggle="modal" class="EditExpense btn btn-default">
                                <i class="fa fa-edit"></i>
                            </span>
                            <span data-Image="@currentexpense.FilePath" data-target="#ImageModal" data-toggle="modal" class="btn white open-modalimage">
                                <i class="fa fa-picture-o"></i>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/app.js"></script>
