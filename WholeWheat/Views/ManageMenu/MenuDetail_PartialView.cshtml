@model List<WholeWheatRepository.Models.ManageMenu>

<div class="row" style="margin-top:100px;">
    <table id="Table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Menu ID</th>
                <th>Menu Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currentmenu in Model)
            {
                <tr>
                    <td>@currentmenu.MenuID</td>
                    <td>@currentmenu.MenuName</td>
                    <td>@currentmenu.Status</td>
                    <td>
                        <div class="btn-group">
                            <span data-Menuid="@currentmenu.MenuID" data-MenuName="@currentmenu.MenuName" data-Status-Id="@currentmenu.StatusID" data-Status="@currentmenu.Status" data-target="#AddMenu" data-toggle="modal" class="EditMenu btn btn-default">
                                <i class="fa fa-edit"></i>
                                Edit
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/app.js"></script>
