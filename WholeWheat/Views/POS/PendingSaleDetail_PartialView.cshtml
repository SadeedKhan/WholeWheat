@model List<WholeWheatRepository.Models.ManageSale>

<table id="Table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align:center;">X</th>
            <th><h4>Sale Type</h4></th>
            <th><h4>Recipt #</h4></th>
            <th><h4>Customer Name</h4></th>
            <th><h4>Phone</h4></th>
            <th><h4>Sale Date</h4></th>
            <th><h4>Total</h4></th>
            <th><h4>Order Status</h4></th>
            <th><h4>Sale Status</h4></th>
            <th><h4>Action(s)</h4></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var current in Model)
        {
                if (current.OrderStatus == "Order Taken")
                {

        <tr>
            <td style="text-align:center;">
                <a href="javascript:void(0)" onclick="delete_record(@current.SaleID)">
                    <span class="fa-stack fa-sm">
                        <i class="fa fa-circle fa-stack-2x delete-product"></i>
                        <i class="fa fa-times fa-stack-1x fa-fw fa-inverse"></i>
                    </span>
                </a>
            </td>
            <td>@current.SaleType</td>
            <td>@current.ReciptNo</td>
            @if (current.TakeAwayCustomerName != "")
            {
                <td>@current.TakeAwayCustomerName</td>
            }
            else
            {
                <td>@current.CustomerName</td>
            }
            <th>@current.CustomerPhone</th>
            <td>@current.SaleDate</td>
            <td>@current.TotalAmount</td>
            <td>@current.OrderStatus</td>
            @if (current.SaleStatus == "Paid")
            {
                <td><span class="paid">@current.SaleStatus</span></td>
            }
            else
            {
                <td><span class="unpaid">@current.SaleStatus</span></td>
            }
            <td style="text-align:center;">
                <a><span data-saleid="@current.SaleID" data-saletypeid="@current.SaleTypeID" data-reciptno="@current.ReciptNo" data-totalitems="@current.TotalItems" data-tax="@current.Tax" data-taxamount="@current.TaxAmount" data-subtotalamount="@current.SubTotal" data-totalamount="@current.TotalAmount" data-discountamount="@current.DiscountAmount" data-deliverycharges="@current.DeliveryCharges" data-paidamount="@current.PaidAmount" data-balance="@current.Balance" data-takeawaycustomername="@current.TakeAwayCustomerName" data-deliveryboyid="@current.DeliveryBoyID" data-customerid="@current.CustomerID" data-customername="@current.CustomerName" data-customerphone="@current.CustomerPhone" data-customeremail="@current.CustomerEmail" data-customerdescription="@current.CustomerDescription" data-customeraddress="@current.CustomerAddress" data-paymentmodeid="@current.PaymentModeID" class="btn btn-picker EditSale">View<i class="fa fa-eye"></i></span></a>
                <a><span data-saleid="@current.SaleID" class="btn btn-red flat-box-btn waves-effect waves-button OrderDelivered">Delivered<i class="fa fa-truck"></i></span></a>
            </td>
        </tr>
                }
                else
                {
        <tr>
            <td style="text-align:center;">
                <a href="javascript:void(0)" onclick="delete_record(@current.SaleID)">
                    <span class="fa-stack fa-sm">
                        <i class="fa fa-circle fa-stack-2x delete-product"></i>
                        <i class="fa fa-times fa-stack-1x fa-fw fa-inverse"></i>
                    </span>
                </a>
            </td>
            <td>@current.SaleType</td>
            <td>@current.ReciptNo</td>
            @if (current.TakeAwayCustomerName != "")
            {
                <td>@current.TakeAwayCustomerName</td>
            }
            else
            {
                <td>@current.CustomerName</td>
            }
            <th>@current.DeliveryBoyName</th>
            <td>@current.SaleDate</td>
            <td>@current.TotalAmount</td>
            <td>@current.OrderStatus</td>
            @if (current.SaleStatus == "Paid")
            {
                <td><span class="paid">@current.SaleStatus</span></td>
            }
            else
            {
                <td><span class="unpaid">@current.SaleStatus</span></td>
            }
            <td>
                <a><span data-saleid="@current.SaleID" data-saletypeid="@current.SaleTypeID" data-reciptno="@current.ReciptNo" data-totalitems="@current.TotalItems" data-tax="@current.Tax" data-taxamount="@current.TaxAmount" data-subtotalamount="@current.SubTotal" data-totalamount="@current.TotalAmount" data-discountamount="@current.DiscountAmount" data-deliverycharges="@current.DeliveryCharges" data-paidamount="@current.PaidAmount" data-balance="@current.Balance" data-takeawaycustomername="@current.TakeAwayCustomerName" data-deliveryboyid="@current.DeliveryBoyID" data-customerid="@current.CustomerID" data-customername="@current.CustomerName" data-customerphone="@current.CustomerPhone" data-customeremail="@current.CustomerEmail" data-customerdescription="@current.CustomerDescription" data-customeraddress="@current.CustomerAddress" data-paymentmodeid="@current.PaymentModeID" class="btn btn-picker EditSale">View<i class="fa fa-eye"></i></span></a>
            </td>
        </tr>
                }
        }
    </tbody>
</table>