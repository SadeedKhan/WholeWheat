@model List<WholeWheatRepository.Models.ManageSale>

<table id="Table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th><h4>Recipt #</h4></th>
            <th><h4>Customer Name</h4></th>
            <th><h4>Discount Amount</h4></th>
            <th><h4>Total Amount</h4></th>
            <th><h4>Total Items</h4></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Sale in Model)
        {
        <tr>
            <td>@Sale.ReciptNo</td>
            @if (Sale.TakeAwayCustomerName != "")
            {
                <td>@Sale.TakeAwayCustomerName</td>
            }
            else
            {
                <td>@Sale.CustomerName</td>
            }
            <td>@Sale.DiscountAmount</td>
            <td>@Sale.TotalAmount</td>
            <td>@Sale.TotalItems</td>
        </tr>
        }
    </tbody>
</table>
<script src="~/js/app.js"></script>

