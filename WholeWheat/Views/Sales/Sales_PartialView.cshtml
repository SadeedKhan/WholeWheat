@model List<WholeWheatRepository.Models.ManageSale>
<div class="row" style="margin-top:100px;">
    <table id="Table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Recipt #</th>
                <th>Customer</th>
                <th>Sale Date</th>
                <th>Discount</th>
                <th>Total</th>
                <th>Total Items</th>
                <th>Status</th>
                <th style="width: 95px;">Action(s)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var current in Model)
            {
                <tr>
                    <td>@current.ReciptNo</td>
                    @if (current.TakeAwayCustomerName != "")
                    {
                        <td>@current.TakeAwayCustomerName</td>
                    }
                    else
                    {
                        <td>@current.CustomerName</td>
                    }
                    <td>@current.SaleDate</td>
                    <td>@current.DiscountAmount</td>
                    <td>@current.TotalAmount</td>
                    <td>@current.TotalItems</td>
                    <td><span class="paid">@current.SaleStatus</span></td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" href="javascript:void(0)" dropdown-toggle"="" data-toggle="dropdown">
                                <i class="fa fa-cog fa-fw"></i> Action
                            </a>
                            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                                <span class="fa fa-caret-down" title="Toggle dropdown menu"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a><span data-saleid="@current.SaleID" data-saletypeid="@current.SaleTypeID" data-saletype="@current.SaleType" data-reciptno="@current.ReciptNo" data-saledate="@current.SaleDate" data-totalitems="@current.TotalItems" data-tax="@current.Tax" data-taxamount="@current.TaxAmount" data-subtotalamount="@current.SubTotal" data-totalamount="@current.TotalAmount" data-discountamount="@current.DiscountAmount" data-deliverycharges="@current.DeliveryCharges" data-paidamount="@current.PaidAmount" data-balance="@current.Balance" data-takeawaycustomername="@current.TakeAwayCustomerName" data-deliveryboyid="@current.DeliveryBoyID" data-customerid="@current.CustomerID" data-customername="@current.CustomerName" data-customerphone="@current.CustomerPhone" data-customeremail="@current.CustomerEmail" data-customerdescription="@current.CustomerDescription" data-customeraddress="@current.CustomerAddress" data-paymentmodeid="@current.PaymentModeID" class="PrintSale"><i class="fa fa-ticket fa-fw"></i>Receipt</span></a></li>
                                <li>
                                    <a href="javascript:void(0)" onclick="delete_record(@current.SaleID)">
                                        <i class="fa fa-trash-o fa-fw" aria-hidden="true"></i> Delete
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/app.js"></script>



