@model List<WholeWheatRepository.Models.ManageSubMenu>

<div class="row" style="margin-top:100px;">
    <table id="Table" class="table table-striped table-bordered dataTable no-footer" style="width:100%;">
        <thead>
            <tr>
                <th>Code</th>
                <th>Sub Menu ID</th>
                <th>Sub Menu Name</th>
                <th>Menu Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currentsubmenu in Model)
            {
                <tr>
                    <td>@currentsubmenu.Code</td>
                    <td>@currentsubmenu.SubMenuID</td>
                    <td>@currentsubmenu.SubMenuName</td>
                    <td>@currentsubmenu.MenuName</td>
                    <td>@currentsubmenu.Price</td>
                    <td>@currentsubmenu.Description</td>
                    <td>@currentsubmenu.Status</td>
                    <td>
                        <div class="btn-group">
                            <span data-SubMenuid="@currentsubmenu.SubMenuID" data-Menuid="@currentsubmenu.MenuID" data-SubMenuName="@currentsubmenu.SubMenuName" data-Code="@currentsubmenu.Code" data-Price="@currentsubmenu.Price" data-Image="@currentsubmenu.FileName" data-Color="@currentsubmenu.Color" data-description="@currentsubmenu.Description" data-Status-Id="@currentsubmenu.StatusID" data-Status="@currentsubmenu.Status" data-target="#AddSubMenu" data-toggle="modal" class="EditSubMenu btn btn-default">
                                <i class="fa fa-edit"></i>
                            </span>
                            <span data-Image="@currentsubmenu.FilePath" data-target="#ImageModal" data-toggle="modal" class="btn @currentsubmenu.Color white open-modalimage">
                                <i class="fa fa-picture-o"></i>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/app.js"></script>

