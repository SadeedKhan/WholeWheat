</div>


<!-- Modal stats -->
<div class="modal fade" id="ProductDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document" id="statsModal">
        <div class="modal-content">
