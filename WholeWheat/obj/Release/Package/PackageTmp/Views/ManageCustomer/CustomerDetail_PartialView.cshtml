@model List<WholeWheatRepository.Models.ManageCustomer>

<div class="row" style="margin-top:100px;">
    <table id="Table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Ceated At</th>
                <th>Phone</th>
                <th class="hidden-xs">Email</th>
                <th class="hidden-xs">Description</th>
                <th class="hidden-xs">Address</th>
                <th class="hidden-xs">Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currentcustomer in Model)
            {
                <tr>
                    <td>@currentcustomer.CustomerName</td>
                    <td>@currentcustomer.Date</td>
                    <td>@currentcustomer.Phone</td>
                    <td>@currentcustomer.Email</td>
                    <td>@currentcustomer.Description</td>
                    <td>@currentcustomer.Address</td>
                    <td>@currentcustomer.Status</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default" href="javascript:void(0)" data-toggle="popover" data-placement="left" data-html="true" title='Are you sure ?' data-content='<a class="btn btn-danger" href="customers/delete/8">Yes, delete it!</a>'><i class="fa fa-times"></i></a>
                            <span data-Customerid="@currentcustomer.CustomerID" data-CustomerName="@currentcustomer.CustomerName" data-Phone="@currentcustomer.Phone" data-Email="@currentcustomer.Email" data-Description="@currentcustomer.Description" data-Address="@currentcustomer.Address" data-StatusId="@currentcustomer.StatusID" data-Status="@currentcustomer.Status" data-target="#AddCustomer" data-toggle="modal" class="EditCustomer btn btn-default">
                                <i class="fa fa-edit"></i>
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/app.js"></script>
